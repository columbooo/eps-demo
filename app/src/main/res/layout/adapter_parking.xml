<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/parking_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightBlue"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:padding="15dp"
        android:elevation="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="229 Chong Qing Nan Lu, Shibei Qu, Qingdao Shi, Shandong Sheng, China"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parking_address"
                android:paddingTop="5dp"
                android:layout_below="@+id/parking_platenumber"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/parking_duration" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:text="22 min"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/parking_duration" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>